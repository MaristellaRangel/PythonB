from random import randint

numAleatorio = randint(1, 100)
vida = 50

print(numAleatorio)
for tentativa in range(3):
    numUsuario = int(input("Digite um número: "))
    if numUsuario != numAleatorio:
        dano = abs(numUsuario - numAleatorio)
        vida = vida - dano
        if vida <= 0:
            print("Fim - Acabaram suas vidas!")
            break
        print(f"Dano: {dano}")
        print(f"Vida: {vida}")
    else:
        print("FIM - Você venceu!")
        break
else:
    print("Fim - Acabaram as tentativas")
